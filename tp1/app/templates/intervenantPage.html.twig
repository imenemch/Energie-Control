{% extends 'base_auth.html.twig' %}

{% block title %}Accueil-Client{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2>Liste des interventions attribuées</h2>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Description</th>
                            <th>Statut</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for intervention in interventions %}
                            <tr>
                                <td>{{ intervention.description }}</td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <select name="new_statut_id" class="form-control mr-2">
                                            <option value="1" {% if 1 == intervention.id_statut %} selected {% endif %}>En cours</option>
                                            <option value="2" {% if 2 == intervention.id_statut %} selected {% endif %}>En attente</option>
                                            <option value="3" {% if 3 == intervention.id_statut %} selected {% endif %}>Terminée</option>
                                            <option value="4" {% if 4 == intervention.id_statut %} selected {% endif %}>Annulée</option>
                                            <option value="5" {% if 5 == intervention.id_statut %} selected {% endif %}>En retard</option>
                                        </select>
                                        <button type="button" class="btn btn-primary" onclick="updateInterventionStatus('{{ intervention.id_intervention }}')">Mettre à jour</button>
                                    </div>
                                </td>
                                <td><a href="addCommentaire.php?id={{ intervention.id_intervention }}"><img src="../img/commentaire.png" alt="Ajouter un commentaire" style="width: 24px; height: 24px;" ></a></td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascript %}
<script>
function updateInterventionStatus(idIntervention) {
    var newStatutId = document.querySelector('select[name="new_statut_id"]').value;

    fetch('update_status.php', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/x-www-form-urlencoded',
        },
        body: 'id_intervention=' + encodeURIComponent(idIntervention) + '&new_statut_id=' + encodeURIComponent(newStatutId),
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            alert('Mise à jour réussie');
            // Actualiser la page ou effectuer d'autres actions après la mise à jour réussie si nécessaire
        } else {
            alert('Erreur lors de la mise à jour');
        }
    })
    .catch(error => {
        console.error('Erreur:', error);
    });
}
</script>
{% endblock %}
