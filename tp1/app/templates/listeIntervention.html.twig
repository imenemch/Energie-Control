<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Liste des Interventions</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>

<h2>Liste des Interventions</h2>

<table>
    <thead>
        <tr>
            <th>ID Intervention</th>
            <th>ID Client</th>
            <th>ID Standardiste</th>
            <th>ID Statut</th>
            <th>ID Degr√©</th>
            <th>ID Type</th>
            <th>Description</th>
            <th>Date</th>
            <th>Heure</th>
        </tr>
    </thead>
    <tbody>
        {% for intervention in interventions %}
        <tr>
            <td>{{ intervention.id_intervention }}</td>
            <td>{{ intervention.id_client }}</td>
            <td>{{ intervention.id_standardiste }}</td>
            <td>{{ intervention.id_statut }}</td>
            <td>{{ intervention.id_degre }}</td>
            <td>{{ intervention.id_type }}</td>
            <td>{{ intervention.description }}</td>
            <td>{{ intervention.date }}</td>
            <td>{{ intervention.heure }}</td>
        </tr>
        {% endfor %}
    </tbody>
</table>

</body>
</html>
